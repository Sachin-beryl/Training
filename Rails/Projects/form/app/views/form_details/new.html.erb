<h1>details </h1>

<%= form_with model: @form_detail do |f| %>
  <div class="form-field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <%= error_message_for @form_detail, :name %>
  </div>

  <div class="form-field">
    <%= f.label :age %><br>
    <%= f.select :age, options_for_select(18..60) %>
    <%= error_message_for @form_detail, :age %>
  </div>

  <div class="form-field">
    <%= f.label :gender%><br />
    <%= f.radio_button :gender, 'male' %> male<br />
    <%= f.radio_button :gender, 'female' %> female<br />
    <%= error_message_for @form_detail, :gender %>
  </div>

  <div class="form-field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
    <%= error_message_for @form_detail, :address %>
  </div>

  <div class="form-field">
    <%= f.label :terms_and_conditions %>
    <%= f.check_box :terms_and_conditions %>
    <%= f.label :terms_and_conditions, "I accept the terms and conditions" %>
    <%= error_message_for @form_detail, :terms_and_conditions %>
  </div>

  <div class="form-field">
    <%= f.submit %>
  </div>
<% end %>